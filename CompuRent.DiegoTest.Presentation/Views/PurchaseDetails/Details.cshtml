@model CompuRent.DiegoTest.Models.Entities.PurchaseDetailEntity

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.ClientId) - @Html.DisplayFor(model => model.Client.Name) - @Html.DisplayFor(model => model.Client.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumSet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumSet.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-circle-left"></i> Volver</a>
</div>
