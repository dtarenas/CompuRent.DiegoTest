@model IEnumerable<CompuRent.DiegoTest.Models.Entities.AlbumSetEntity>

@{
    ViewData["Title"] = "Index";
}

<h1>Álbumes</h1>

<p>
    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus-circle"></i> Crear nuevo álbum</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.AlbumSetId"><i class="fa fa-pencil"></i> Editar</a> |
                    <a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.AlbumSetId"><i class="fa fa-align-justify"></i> Detalle</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.AlbumSetId"><i class="fa fa-trash"></i> Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
